<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="@dimen/primary_title_margin_botom"
        android:background="@android:color/transparent"
        android:gravity="start"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textSize="@dimen/primary_text_size"
        app:icon="@drawable/arrow_back"
        app:iconGravity="start"
        app:iconPadding="@dimen/primary_icon_padding"
        app:iconTint="@color/black" />


    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/primary_btn_padding"
        android:text="@string/dark_theme"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        android:gravity="start"
        android:padding="@dimen/primary_btn_padding"
        android:text="@string/share_app"
        android:textAllCaps="false"
        android:textSize="@dimen/small_text_size"
        app:icon="@drawable/share"
        app:iconGravity="end"
        app:iconPadding="@dimen/primary_icon_padding"
        app:iconTint="@color/text_gray" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        android:gravity="start"
        android:padding="@dimen/primary_btn_padding"
        android:text="@string/write_to_support"
        android:textAllCaps="false"
        android:textSize="@dimen/small_text_size"
        app:icon="@drawable/support"
        app:iconGravity="end"
        app:iconPadding="@dimen/primary_icon_padding"
        app:iconTint="@color/text_gray" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        android:gravity="start"
        android:padding="@dimen/primary_btn_padding"
        android:text="@string/terms_of_use"
        android:textAllCaps="false"
        android:textSize="@dimen/small_text_size"
        app:icon="@drawable/arrow_left"
        app:iconGravity="end"
        app:iconPadding="@dimen/primary_icon_padding"
        app:iconTint="@color/text_gray" />


</LinearLayout>