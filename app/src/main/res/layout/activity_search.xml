<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/panelHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/panel_header_height"
        android:layout_marginBottom="@dimen/panel_header_marginBottom"
        android:padding="@dimen/panel_header_padding"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/panel_title_hight"
            android:layout_marginStart="@dimen/panel_title_marrgin"
            android:gravity="center_vertical"
            android:text="@string/search"
            android:textColor="@color/black"
            android:textSize="@dimen/panel_title_text_size" />
    </LinearLayout>

</LinearLayout>