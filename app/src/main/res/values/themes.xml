<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSecondary">@color/text_gray</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />

    <style name="Theme.PlaylistMaker.Main" parent="Theme.PlaylistMaker">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="Theme.PlaylistMaker.SearchBox" parent="Theme.PlaylistMaker">
        <item name="android:background">@drawable/bg_search_box</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="tint">@color/secondary_gray</item>
    </style>

    <style name="Theme.PlaylistMaker.TrackListItem" parent="Theme.PlaylistMaker">
        <item name="tint">@color/text_gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Theme.PlaylistMaker.TrackListItem.Info" parent="Theme.PlaylistMaker.TrackListItem">
        <item name="tint">@color/text_gray</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/small_text_primary</item>
    </style>

    <style name="Theme.PlaylistMaker.TrackListItem.PlaceHolder" parent="Theme.PlaylistMaker.TrackListItem">
        <item name="tint">@null</item>
    </style>

    <style name="Theme.PlaylistMaker.SearchErrorHolder" parent="Theme.PlaylistMaker">
        <item name="android:paddingTop">78dp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Theme.PlaylistMaker.SearchErrorHolder.Image">
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="Theme.PlaylistMaker.SearchErrorHolder.Image.NoSearch" parent="Theme.PlaylistMaker.SearchErrorHolder.Image">
        <item name="android:src">@drawable/search_no_found</item>
    </style>

    <style name="Theme.PlaylistMaker.SearchErrorHolder.Image.NoConnection" parent="Theme.PlaylistMaker.SearchErrorHolder.Image">
        <item name="android:src">@drawable/search_no_connection</item>
    </style>

    <style name="Theme.PlaylistMaker.SearchErrorHolder.Text">
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="Theme.PlaylistMaker.SearchErrorHolder.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:numbersBackgroundColor">@color/search_text_color</item>
    </style>

</resources>