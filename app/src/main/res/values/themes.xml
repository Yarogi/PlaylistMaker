<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSecondary">@color/text_gray</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />

    <style name="Theme.PlaylistMaker.Main" parent="Theme.PlaylistMaker">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="Theme.PlaylistMaker.SearchBox" parent="Theme.PlaylistMaker">
        <item name="android:background">@drawable/bg_search_box</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="tint">@color/secondary_gray</item>
    </style>

    <style name="Theme.PlaylistMaker.TrackListItem" parent="Theme.PlaylistMaker">
        <item name="tint">@color/text_gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Theme.PlaylistMaker.TrackListItem.Info" parent="Theme.PlaylistMaker.TrackListItem">
        <item name="tint">@color/text_gray</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/small_text_primary</item>
    </style>
    <style name="Theme.PlaylistMaker.TrackListItem.PlaceHolder" parent="Theme.PlaylistMaker.TrackListItem">
        <item name="tint">@null</item>
    </style>

</resources>