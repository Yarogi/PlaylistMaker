<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">

    <!--  Control panel-->
    <style name="ControlPanel">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="PanelHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/panel_header_height</item>
        <item name="android:layout_marginBottom">@dimen/panel_header_marginBottom</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/panel_header_padding</item>
    </style>

    <style name="PanelIcon">
        <item name="android:layout_width">@dimen/panel_title_hight</item>
        <item name="android:layout_height">@dimen/panel_title_hight</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">start</item>
        <item name="android:inputType">none</item>
        <item name="iconGravity">start</item>
        <item name="iconPadding">@dimen/panel_title_icon_padding</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="PanelImgButton">
        <item name="android:layout_width">@dimen/panel_title_hight</item>
        <item name="android:layout_height">@dimen/panel_title_hight</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="PlaylistTitle">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PanelTitle" parent="PlaylistTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/panel_title_hight</item>
        <item name="android:layout_marginStart">@dimen/panel_title_marrgin</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MainButtomStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/big_button_margin</item>
        <item name="android:layout_marginTop">@dimen/big_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/big_button_margin</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/big_button_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/panel_title_icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="RootBottomButtonStyle">
        <item name="itemIconSize">24dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemBackground">@color/transparent</item>
        <item name="itemIconTint">@color/bottom_nav_color_night</item>
        <item name="itemTextColor">@color/bottom_nav_color_night</item>
        <item name="itemTextAppearanceActive">@style/RootBottomButtonStyle.TextActive</item>
        <item name="itemTextAppearanceInactive">@style/RootBottomButtonStyle.TextActive</item>
    </style>

    <style name="RootBottomButtonStyle.Border">
        <item name="android:backgroundTint">@color/light_gray</item>
    </style>

    <style name="RootBottomButtonStyle.TextActive" parent="RootBottomButtonStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="MenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/menu_text_padding_vertical</item>
        <item name="android:paddingStart">@dimen/menu_text_padding_left</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <!--Text-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <!-- Icon -->
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/menu_text_icon_padding</item>
        <item name="iconTint">@color/white</item>
        <!-- Drawable -->
        <item name="android:drawableTint">@color/white</item>
        <item name="android:drawablePadding">@dimen/menu_text_icon_padding</item>

    </style>

    <style name="SwitchMenuItem" parent="MenuItem">
        <item name="thumbTint">@color/blue</item>
        <item name="trackTint">@color/night_blue</item>
    </style>

    <style name="HolderButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/search_text_color</item>
        <item name="cornerRadius">54dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="SearchNoConnectionHolder" parent="HolderButton" />

    <style name="TabsHorisontal">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">@dimen/panel_title_hight</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="android:background">@color/black</item>
    </style>

    <!-- Player -->
    <style name="Player">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@color/light_black</item>
    </style>

    <style name="Player.TrackTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="Player.TrackTitle.Track" parent="Player.TrackTitle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Player.TrackTitle.Artist" parent="Player.TrackTitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Player.PlayButton" parent="Player">
        <item name="tint">@color/white</item>
    </style>

    <style name="Player.SecondaryButton" parent="Player">
        <item name="tint">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="layout_constraintDimensionRatio">h, 1:1"</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Player.SecondaryButton.Features" parent="Player.SecondaryButton">
        <item name="tint">@null</item>
        <item name="android:src">@drawable/ic_feature_selector_dark</item>
    </style>

    <style name="Player.TrackTitle.PlayTime" parent="Player.TrackTitle.Artist">
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="Player.TrackDescription.Key" parent="Player.TrackDescription">
        <item name="android:textColor">@color/text_gray</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="Player.TrackDescription.Value" parent="Player.TrackDescription">
        <item name="layout_constraintHorizontal_bias">1</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!--  Create a new playlist  -->
    <style name="PlaylistItem">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">19dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/input_box</item>
        <item name="tickColor">@color/white</item>
    </style>

    <style name="PlaylistItemTitle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingHorizontal">3dp</item>

    </style>

    <style name="PlaylistItemCreateButtom">
        <item name="colorPrimary">@null</item>
    </style>

    <style name="PlaylistListItemCard">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="PlaylistListItemText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>